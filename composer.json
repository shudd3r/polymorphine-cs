{
    "name": "polymorphine/cs",
    "description": "Code standards check & fix scripts for Polymorphine libraries",
    "type": "library",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "squizlabs/php_codesniffer": "^3.5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Shudd3r",
            "email": "q3.shudder@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Polymorphine\\CodeStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Polymorphine\\CodeStandards\\Tests\\": "tests/"
        }
    },
    "bin": [
        "polymorphine-cs"
    ]
}
